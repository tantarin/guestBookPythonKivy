windowManager:
	addWindow:
	messagesWindow:

<addWindow>:
    name2: name2
    email: email
    message: message
    FloatLayout:
        Label:
            text: "NAME:"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.05, "top": 0.9}
        TextInput:
            id: name2
            multiline: False
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.27, "top": 0.9}
        Label:
            text: "EMAIL:"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.05, "top": 0.7}
        TextInput:
            id: email
            multiline: False
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.27, "top": 0.7}
        Label:
            text: "MESSAGE:"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.05, "top": 0.5}
        TextInput:
            id: message
            multiline: True
            size_hint: 0.6, 0.3
            pos_hint: {"x": 0.27, "top": 0.5}
        Button:
            text: "SUBMIT"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.27, "top": 0.15}
            on_press:
                root.addbtn()
                root.manager.transition.direction = "right"



<messagesWindow>:
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                id: messages_grid
                cols: 2
                row_force_default: True
                row_default_height: 200
            Button:
                text: "Добавить новое сообщение"
                size_hint: 0.4, 0.1
                pos_hint: {"x": 0.33, "top": 0.4}
                on_release:
                    app.root.current = 'add'
                    root.manager.transition.direction = "down"









