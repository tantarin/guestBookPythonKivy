<GuestBookApp>:
     BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [30,30,30,30]
        spacing: 30
        size_hint: None, None
        size: 500,500
        GridLayout:
            cols: 2
            Label:
                text: "Имя:"
                size_hint : 0.2, 0.1
                pos_hint : {"x":0.25, "top":0.9}
            TextInput:
                id: name_input
                multiline : False
                size_hint : 0.3, 0.1
                pos_hint : {"x" : 0.45, "top" : 0.9}
            Label:
                text: "Email:"
                size_hint : 0.2, 0.1
                pos_hint : {"x" : 0.25, "top" : 0.7}
            TextInput:
                id: email_input
                multiline : False
                size_hint : 0.3, 0.1
                pos_hint : {"x" : 0.45, "top" : 0.7}
            Label:
                text: "Комментарий:"
            TextInput:
                id: comment_input
            Button:
                text: "Добавить"
                font_size: "18sp"
                size_hint: None, None
                size: 250,100
                background_normal: ''
                background_color: 1,0,0,1
                on_press: app.add_entry()

