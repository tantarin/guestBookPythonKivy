<GuestBookApp>:
    GridLayout:
        cols: 2
        Label:
            text: "Имя:"
        TextInput:
            id: name_input
            size_hint_y: None
            height: 30  # Фиксированная высота поля ввода
        Label:
            text: "Email:"
        TextInput:
            id: email_input
            size_hint_y: None
            height: 30  # Фиксированная высота поля ввода
        Label:
            text: "Комментарий:"
        TextInput:
            id: comment_input
            size_hint_y: None
            height: 100  # Фиксированная высота поля ввода
        Button:
            text: "Добавить"
            on_press: app.add_entry()



